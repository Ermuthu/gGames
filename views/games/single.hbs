<h2>
	{{game.title}}
</h2>

<a href="/games">
	Back
</a>

<form action="/games/{{game.id}}?_method=PUT" method="post">
	<div >
		<label for="title">
			Title
		</label>
		<input type="text"  id="title" name='title' value="{{game.title}}" placeholder="Enter a game title" required>
	</div>
	<div>
		<label for="title">System</label>
			<input type="text" id="system" name='system' value="{{game.system}}" placeholder="Enter the game's system" required>
	</div>
	<button type="submit">
		Edit
	</button>
</form>
<form action="/games/{{game.id}}?_method=DELETE" method="post">
	<div class="del" >
		<label for="title">
			Title
		</label>
		<input type="text"  id="title" name='title' value="{{game.title}}" placeholder="Enter a game title" required>
	</div>
	<div class="del">
		<label for="title">System</label>
			<input type="text" id="system" name='system' value="{{game.system}}" placeholder="Enter the game's system" required>
	</div>

<button type="submit">Delete</button>
</form>
